<div class="saved-flights-page">
<h2>Welcome <%=current_user.email%></h3>
</div>
    <hr>
    <div class="saved-flights">
      <h1 class="my-header">Saved flights</h4>
      <br>
    <% current_user.user_flights.each do |flight| %>

      <h3><%= link_to "",  user_user_flight_path(current_user, flight), :method => "delete", class: "btn-red glyphicon glyphicon-remove" %>


        <h4>MPD: <%= flight.mpd %></h4>
        <h4>Price: <%= flight.price %></h4>
        <h4>Airline Carrier: <%= flight.airlineCarrier %></h4>
        <h4>Airline Carrier: <%= flight.airlineCarrier %></h4>
        <h4>Flight Number: <%= flight.airlineNumber %></h4>
        <h4>Departure Time: <%= flight.departureTime %></h4>
        <h4>Arrival Time: <%= flight.arribalTime %></h4>


      </h3>
      <br>
    </div>

    <% end %>
